<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="email.com.gmail.ttsai0509.http.controller.MainController"
            stylesheets="main.css">

    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem fx:id="miNew" text="New Request"/>
                <MenuItem fx:id="miExit" text="Exit"/>
            </Menu>
            <Menu text="Run">
                <MenuItem fx:id="miSubmit" text="Submit"/>
            </Menu>
        </MenuBar>
    </top>

    <left>
        <StackPane fx:id="requestContainer"/>
    </left>

    <center>
        <StackPane fx:id="responseContainer"/>
    </center>

    <right>
        <ListView fx:id="lvHistory" style="-fx-pref-width: 200px"/>
    </right>

</BorderPane>